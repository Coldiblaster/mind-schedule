{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "prettier/prettier": [
      "error",
      {
        "plugins": [
          "prettier-plugin-tailwindcss"
        ],
        "trailingComma": "all",
        "arrowParens": "avoid",
        "tabWidth": 2,
        "endOfLine": "auto",
        "printWidth": 80,
        "singleQuote": true,
        "tailwindFunctions": [
          "cva",
          "cx"
        ]
      }
    ]
  }
}